{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Create Post Schema",
    "required": ["userId", "content", "hashtags"],
    "properties": {
      "userId": {
        "type": "string"
      },
      "content": {
        "type": "string"
      },
      "hashtags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "default": []
      },
      "isAnonymous": {
        "type": "boolean",
        "default": false
      }
    }
  }
  